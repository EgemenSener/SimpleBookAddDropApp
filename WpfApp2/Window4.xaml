<Window x:Class="WpfApp2.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="add" Content="Add Another Book" HorizontalAlignment="Left" Margin="64,69,0,0" VerticalAlignment="Top" Width="168" Height="43" RenderTransformOrigin="0.595,0.558" FontWeight="Bold" Click="add_Click" Grid.Column="1"/>
        <Button x:Name="close" Content="Close" HorizontalAlignment="Left" Margin="64,335,0,0" VerticalAlignment="Top" Width="168" Height="43" RenderTransformOrigin="0.595,0.558" FontWeight="Bold" Click="close_Click" Grid.Column="1"/>
        <Button x:Name="delete" Content="Delete" HorizontalAlignment="Left" Margin="64,198,0,0" VerticalAlignment="Top" Width="168" Height="43" RenderTransformOrigin="0.595,0.558" FontWeight="Bold" Grid.Column="1" Click="delete_Click"/>
        <ListBox x:Name="listtbox" HorizontalAlignment="Left" Height="309" Margin="68,69,0,0" VerticalAlignment="Top" Width="246"/>

    </Grid>
</Window>
